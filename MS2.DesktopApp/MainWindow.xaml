<Window x:Class="MS2.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HỆ THỐNG QUẢN LÝ MINIMART" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT MENU -->
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- HEADER -->
                <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="10">
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentUser.FullName}" 
                                   FontSize="14" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentUser.Role}" 
                                   FontSize="12" 
                                   Foreground="Gray"/>
                    </StackPanel>
                </Border>

                <!-- MENU BUTTONS -->
                <Button Content="BÁN HÀNG (POS)" 
                        Height="50" 
                        Command="{Binding NavigateToPosCommand}"
                        Margin="10,20,10,0"/>

                <Button Content="KHO HÀNG" 
                        Height="50" 
                        Command="{Binding NavigateToInventoryCommand}"
                        Margin="10,10,10,0"/>

                <Button Content="BÁO CÁO" 
                        Height="50" 
                        Command="{Binding NavigateToReportsCommand}"
                        Margin="10,10,10,0"/>

                <Button Content="NHÂN VIÊN" 
                        Height="50" 
                        Command="{Binding NavigateToEmployeesCommand}"
                        Visibility="{Binding IsAdmin}"
                        Margin="10,10,10,0"/>

                <!-- LOGOUT BUTTON (Bottom) -->
                <Button Content="ĐĂNG XUẤT" 
                        Height="40" 
                        Command="{Binding LogoutCommand}"
                        Margin="10,40,10,10"
                        VerticalAlignment="Bottom"/>
            </StackPanel>
        </Border>

        <!-- RIGHT CONTENT AREA -->
        <Border Grid.Column="1" Padding="20">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>
