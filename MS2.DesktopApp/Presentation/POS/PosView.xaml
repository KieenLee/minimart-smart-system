<UserControl x:Class="MS2.DesktopApp.Presentation.POS.PosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- SEARCH BAR -->
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         Padding="5"
                         VerticalContentAlignment="Center"/>

                <Button Grid.Column="1" 
                        Content="TÌM KIẾM" 
                        Width="100"
                        Height="30"
                        Margin="10,0,0,0"
                        Command="{Binding SearchProductsCommand}"/>

                <Button Grid.Column="2" 
                        Content="TẢI LẠI" 
                        Width="100"
                        Height="30"
                        Margin="10,0,0,0"
                        Command="{Binding LoadProductsCommand}"/>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- PRODUCTS LIST -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,1,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="DANH SÁCH SẢN PHẨM" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Products}"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="5"
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding CategoryName}" 
                                                       FontSize="12" 
                                                       Foreground="Gray"/>
                                            <TextBlock FontSize="12" 
                                                       Foreground="Gray">
                                                <Run Text="Tồn kho: "/>
                                                <Run Text="{Binding Stock}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" 
                                                   VerticalAlignment="Center"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Margin="10,0">
                                            <Run Text="{Binding Price, StringFormat='{}{0:N0}'}"/>
                                            <Run Text="đ"/>
                                        </TextBlock>

                                        <Button Grid.Column="2" 
                                                Content="THÊM" 
                                                Width="60"
                                                Height="25"
                                                Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- CART -->
            <Border Grid.Column="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="GIỎ HÀNG" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding CartItems}"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="5"
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding ProductName}" 
                                                   FontWeight="Bold"
                                                   FontSize="12"/>

                                        <Grid Grid.Row="1" Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       FontSize="11">
                                                <Run Text="{Binding Quantity}"/>
                                                <Run Text=" x "/>
                                                <Run Text="{Binding UnitPrice, StringFormat='{}{0:N0}'}"/>
                                                <Run Text="đ"/>
                                            </TextBlock>

                                            <TextBlock Grid.Column="1" 
                                                       HorizontalAlignment="Right"
                                                       FontSize="11"
                                                       FontWeight="Bold">
                                                <Run Text="{Binding Subtotal, StringFormat='{}{0:N0}'}"/>
                                                <Run Text="đ"/>
                                            </TextBlock>

                                            <Button Grid.Column="2" 
                                                    Content="X" 
                                                    Width="20"
                                                    Height="20"
                                                    FontSize="10"
                                                    Margin="5,0,0,0"
                                                    Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="2" 
                            BorderBrush="Gray" 
                            BorderThickness="0,1,0,0" 
                            Padding="0,10">
                        <Grid>
                            <TextBlock Text="TỔNG CỘNG:" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                            <TextBlock HorizontalAlignment="Right" 
                                       FontSize="16" 
                                       FontWeight="Bold"
                                       Foreground="Red">
                                <Run Text="{Binding TotalAmount, StringFormat='{}{0:N0}'}"/>
                                <Run Text="đ"/>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="3" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" 
                                Content="XÓA GIỎ" 
                                Height="35"
                                Margin="0,0,5,0"
                                Command="{Binding ClearCartCommand}"/>

                        <Button Grid.Column="1" 
                                Content="THANH TOÁN" 
                                Height="35"
                                Margin="5,0,0,0"
                                FontWeight="Bold"
                                Command="{Binding CheckoutCommand}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- STATUS BAR -->
        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="0,1,0,0" 
                Padding="10,5"
                Background="LightGray">
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="12"/>
        </Border>
    </Grid>
</UserControl>
