<Window x:Class="MS2.DesktopApp.Presentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MS2 - Đăng nhập" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="MS2" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="MINIMART SMART SYSTEM" 
                           FontSize="14" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" Background="White" Margin="40,30,40,40" CornerRadius="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>
            
            <StackPanel Margin="40,30" VerticalAlignment="Center">
                
                <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           Foreground="#333"/>
                
                <!-- Username -->
                <TextBlock Text="Tên đăng nhập:" FontSize="13" Margin="0,0,0,5" Foreground="#555"/>
                <TextBox x:Name="txtUsername" 
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="38" 
                         FontSize="14"
                         Padding="10,8"
                         BorderBrush="#DDD"
                         BorderThickness="1"/>
                
                <!-- Password -->
                <TextBlock Text="Mật khẩu:" FontSize="13" Margin="0,15,0,5" Foreground="#555"/>
                <PasswordBox x:Name="txtPassword"
                             Height="38" 
                             FontSize="14"
                             Padding="10,8"
                             BorderBrush="#DDD"
                             BorderThickness="1"
                             PasswordChanged="TxtPassword_OnPasswordChanged"/>
                
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#D32F2F" 
                           FontSize="12"
                           Margin="0,12,0,0"
                           TextWrapping="Wrap"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <!-- Login Button -->
                <Button Content="ĐĂNG NHẬP" 
                        Command="{Binding LoginCommand}"
                        Height="42" 
                        FontSize="15"
                        FontWeight="SemiBold"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,25,0,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True"
                             Height="4"
                             Margin="0,15,0,0"
                             Foreground="#2196F3"
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                
            </StackPanel>
        </Border>
    </Grid>
</Window>
