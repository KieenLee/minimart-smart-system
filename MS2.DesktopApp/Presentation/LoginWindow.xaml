<Window x:Class="MS2.DesktopApp.Presentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MS2 - Đăng nhập" 
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <StackPanel Margin="30" VerticalAlignment="Center">
        
        <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" 
                   FontSize="16" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Username -->
        <TextBlock Text="Tên đăng nhập:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtUsername" 
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                 Height="25" 
                 Margin="0,0,0,10"/>
        
        <!-- Password -->
        <TextBlock Text="Mật khẩu:" Margin="0,0,0,5"/>
        <PasswordBox x:Name="txtPassword"
                     Height="25" 
                     Margin="0,0,0,10"
                     PasswordChanged="TxtPassword_OnPasswordChanged"/>
        
        <!-- Error Message -->
        <TextBlock Text="{Binding ErrorMessage}" 
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   Visibility="{Binding ErrorVisibility}"/>
        
        <!-- Login Button -->
        <Button Content="ĐĂNG NHẬP" 
                Command="{Binding LoginCommand}"
                Height="30" 
                Margin="0,5,0,0"/>
        
    </StackPanel>
</Window>
